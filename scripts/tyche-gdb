#!/bin/bash

if [[ "$#" != "1" ]]; then
  echo "You should provide one argument {linux,rawc}"
  exit 1
fi

if [[ "$1" == "linux" ]]; then
  rust-gdb -q -ex "file target/x86_64-kernel/debug/first-stage" -ex "target remote :1234" -ex "source scripts/tyche-gdb.gdb" -ex "symbol_linux"
elif [[ "$1" == "rawc" ]]; then
  rust-gdb -q -ex "file target/x86_64-kernel/debug/first-stage" -ex "target remote :1234" -ex "source scripts/tyche-gdb.gdb" -ex "symbol_rawc"
else
  echo "Argument should be {linux,rawc}"
fi
